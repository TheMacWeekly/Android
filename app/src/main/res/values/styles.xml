<resources>

    <!--Style info-->
    <!--Mac Base Red: 9D0A0E-->
    <!--Dark to light reds: 4F0002 7A0003 BD1F23 D84549-->
    <!---->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="listItemTitle">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="listItemSummary">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textSummary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listItemDate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textDate</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="articleContentText">
        <item name="android:textColor">@color/articleContentText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="articleTitleText">
        <item name="android:textColor">@color/articleTitleText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="articleDetailsText">
        <item name="android:textColor">@color/detailsText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="newsFeedHeader">
        <item name="android:textColor">@color/newsFeedHeaderText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--error items-->
    <style name="errorTitle">
        <item name="android:textColor">@color/errorTitle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="errorText">
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
