<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="150dp"
    android:id="@+id/root_activity_login">

    <ImageView
        android:id="@+id/iv_tmw_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:src="@drawable/tmw_svg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_student_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="@string/student_login"
            android:theme="@style/LoginButton" />

        <Button
            android:id="@+id/btn_alumni_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/alumni_login"
            android:theme="@style/LoginButton" />

        <TextView
            android:id="@+id/tv_continue_as_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end"
            android:text="@string/continue_as_guest" />
    </LinearLayout>
</LinearLayout>